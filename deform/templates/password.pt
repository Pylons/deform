<input
    type="password"
    name="${name|field.name}"
    value="${field.widget.redisplay and cstruct or ''}"
    tal:attributes="style style|field.widget.style;
                    class string: form-control ${css_class|field.widget.css_class or ''};
                    maxlength getattr(field.widget, 'maxlength', None);
                    placeholder getattr(field.widget, 'placeholder', None);
                    required 'required' if field.required else None;
                    size getattr(field.widget, 'size', None);"
    id="${oid|field.oid}"/>
