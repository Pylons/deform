<span tal:define="name name|field.name;
                  size size|field.widget.size;
                  css_class css_class|field.widget.css_class;
                  oid oid|field.oid;
                  style style|field.widget.style|None"
      tal:omit-tag="">
    <input type="text"
           name="${name}"
           value="${cstruct}"
           data-provide="typeahead"
           tal:attributes="size size;
                           class string: form-control ${css_class};
                           style style"
           id="${oid}"/>
    <script tal:condition="options" type="text/javascript">
        deform.addCallback(
          '${field.oid}',
          function (oid) {
              $('#' + oid).typeahead(${structure: options});
          }
        );
    </script>
</span>
