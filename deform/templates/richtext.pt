<textarea id="${field.oid}"
          name="${field.name}">${cstruct}</textarea>
<script language="javascript"
	type="text/javascript">
  deform.addCallback(
      '${field.oid}',
      function(oid) {
          tinyMCE.init({
          mode : 'exact',
          elements: oid,
          strict_loading_mode : true,
          height: '${field.widget.height}',
          width: '${field.widget.width}',
          skin : '${field.widget.skin}',
          theme : '${field.widget.theme}',
          theme_advanced_resizing : true,
          theme_advanced_toolbar_align : 'left',
          theme_advanced_toolbar_location : 'top'
          });
      }
      );
$().bind('form.pre.serialize', function(event, $form, options) {
    tinyMCE.triggerSave();
}); 
</script>
